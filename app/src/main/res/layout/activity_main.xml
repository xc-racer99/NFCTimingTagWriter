<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.orienteeringbc.nfctimingtagwriter.MainActivity">

    <Button
        android:id="@+id/update_competitors_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/update_competitor_list"/>

    <TextView
        android:id="@+id/last_updated_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_competitors_button"
        android:layout_centerHorizontal="true"
        android:text="@string/never_updated"/>

    <Button
        android:id="@+id/select_next_competitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_updated_text"
        android:layout_centerHorizontal="true"
        android:text="@string/select_next_competitor"
        android:enabled="false"/>

    <TextView
        android:id="@+id/next_competitor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_next_competitor"
        android:layout_centerHorizontal="true"
        android:text="@string/no_competitor_selected"/>
</RelativeLayout>
